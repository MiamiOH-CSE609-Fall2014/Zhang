#include<iostream>
#include<string>
#include<map>
#include<fstream>
#include<stdlib.h>
#include<cstdlib>
#include<iteration>
#include"digramFreqScores.h"

using namespace std;
map<string,int> digramFreqScores(string s){
map<string,int> 
  // all the possible of pairs with A T G C
  // all the pairs are intialized to 0
freq={
 {"AA",0}, {"AT",0}, {"AG",0}, {"AC",0},
 {"CA",0}, {"CT",0}, {"CG",0}, {"CC",0},
 {"GA",0}, {"GT",0}, {"GG",0}, {"GC",0},
 {"TA",0}, {"TT",0}, {"TG",0}, {"TC",0}
};
string pair;
for(int i=0;i<s.size()-1;i++)
  {++freq[s.substr(i,2)];}
return freq;
}
